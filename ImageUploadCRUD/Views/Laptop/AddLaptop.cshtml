@model LaptopCRUD.Models.ImageImplementation.Laptop;
@{
    ViewData["Title"] = "AddLaptop";
}

<h1>Add a Laptop</h1>

<form method="post" asp-action="AddLaptop" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-center text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Brand" class="form-label">Brand</label>
        <input type="text" asp-for="Brand" class="form-control">
    </div>
    <div class="form-group mb-3">
        <label asp-for="Color" class="form-label">Color</label>
        <input type="text" asp-for="Color" class="form-control">
    </div>
    <div class="row">
        <div class="col-8">
            <label asp-for="ImagePath" class="form-label"></label>
            <input type="file" asp-for="ImagePath" class="form-control" />
        </div>
        <div class="col-4">
            <img src="https://placehold.jp/150*150.png" width="200px" height="200px" 
                style="border: 1px solid red; border-radius: 10px; padding:10px"
                alt="Laptop"
            />
        </div>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a class="btn btn-sm btn-warning p-2 m-2" asp-action="Index" asp-controller="Laptop">Back to Home</a>
</form>

