@model LaptopCRUD.Models.ImageImplementation.Laptop;
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-info">Laptop Details</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-center p-4">
                            <span>Brand : <em><b>@Model.Brand</b></em></span>
                        </div>
                        <div class="col-6 text-center p-4">
                            <img src="/Content/Laptop/@Model.Path" style="height:100px; width:100px; border:2px solid red; border-radius:10px; padding:10px" alt="Laptop image" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-success m-1 p-1" asp-action="Index" asp-controller="Laptop">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

