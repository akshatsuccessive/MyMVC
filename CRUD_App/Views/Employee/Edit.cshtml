@{
    ViewData["Title"] = "EditDetails";
}
@model CRUDApplication.Models.Employee

<h1>Edit Employee Details</h1>

<form method="post" asp-action="Edit">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="hidden" asp-for="Id"/> 
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email address</label>
        <input type="email" asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Salaray" class="form-label">Salary</label>
        <input type="text" asp-for="Salaray" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Department" class="form-label">Department</label>
        <input type="text" asp-for="Department" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>
