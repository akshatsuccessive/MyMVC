@{
    ViewData["Title"] = "CreateEmployee";
}
@model CRUDApplication.Models.Employee

<h1>Add Employee</h1>

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email address</label>
        <input type="email" asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Salaray" class="form-label">Salary</label>
        <input type="text" asp-for="Salaray" class="form-control">
        <span asp-validation-for="Salaray" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Department" class="form-label">Department</label>
        <input type="text" asp-for="Department" class="form-control">
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>